@model IEnumerable<ProjetoPrima.Dominio.Venda>

@{
    ViewBag.Title = "Vendas";
}
<main>
    <div class="container" style="margin-top: 50px !important;">
        <div class="row">
            <div class="offset-md-10 col-md-2">
                @Html.ActionLink("Nova Venda", "Cadastrar", "Venda", new { area = "" }, new { @class = "btn btn-primary botao" })
            </div>
            <div class="col-md-12" style="margin-top: 30px">
                <form>
                    <div class="form-group">
                        <table class="table table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Cliente</th>
                                    <th scope="col" class="text-center">Data</th>
                                    <th scope="col">Pedido</th>
                                    <th scope="col" class="text-right">Valor total</th>
                                    <th scope="col" class="acao"></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Cliente.Nome</td>
                                        <td class="text-center">@item.Data.ToShortDateString()</td>
                                        <td>@item.NumeroDoPedido</td>
                                        <td class="text-right">R$ @item.ValorTotal.ToString("n")</td>
                                        <td class="acao">
                                            @Html.ActionLink("D", "Detalhe", "Venda", new { id = item.Id }, new { @class = "btn btn-primary btn-acao" })
                                            @Html.ActionLink("X", "Remover", "Venda", new { id = item.Id }, new { @class = "btn btn-danger btn-acao" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>

        </div>
    </div>
</main>


